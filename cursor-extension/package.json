{
  "name": "beast-mode-cursor",
  "displayName": "BEAST MODE",
  "description": "AI-powered code quality, suggestions, and custom model support for Cursor",
  "version": "1.0.0",
  "publisher": "beast-mode",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:beastMode.selectModel",
    "onCommand:beastMode.chat",
    "onCommand:beastMode.analyzeQuality"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beastMode.selectModel",
        "title": "BEAST MODE: Select Model"
      },
      {
        "command": "beastMode.registerCustomModel",
        "title": "BEAST MODE: Register Custom Model"
      },
      {
        "command": "beastMode.showModelStatus",
        "title": "BEAST MODE: Show Model Status"
      },
      {
        "command": "beastMode.chat",
        "title": "BEAST MODE: Chat"
      },
      {
        "command": "beastMode.analyzeQuality",
        "title": "BEAST MODE: Analyze Quality"
      },
      {
        "command": "beastMode.getSuggestions",
        "title": "BEAST MODE: Get Suggestions"
      },
      {
        "command": "beastMode.generateTests",
        "title": "BEAST MODE: Generate Tests"
      },
      {
        "command": "beastMode.refactor",
        "title": "BEAST MODE: Refactor"
      },
      {
        "command": "beastMode.indexCodebase",
        "title": "BEAST MODE: Index Codebase"
      },
      {
        "command": "beastMode.connect",
        "title": "BEAST MODE: Connect"
      },
      {
        "command": "beastMode.status",
        "title": "BEAST MODE: Status"
      },
      {
        "command": "beastMode.toggle",
        "title": "BEAST MODE: Toggle Tracking"
      }
    ],
    "configuration": {
      "title": "BEAST MODE",
      "properties": {
        "beastMode.apiUrl": {
          "type": "string",
          "default": "https://beast-mode.dev",
          "description": "BEAST MODE API URL"
        },
        "beastMode.selectedModel": {
          "type": "string",
          "default": null,
          "description": "Selected model ID (e.g., 'custom:my-model' or 'openai:gpt-4')"
        },
        "beastMode.enableSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code suggestions"
        },
        "beastMode.enableQualityHints": {
          "type": "boolean",
          "default": true,
          "description": "Enable quality hints"
        },
        "beastMode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable BEAST MODE tracking"
        },
        "beastMode.trackFileSaves": {
          "type": "boolean",
          "default": true,
          "description": "Track file save events"
        },
        "beastMode.trackFileOpens": {
          "type": "boolean",
          "default": true,
          "description": "Track file open events"
        },
        "beastMode.trackCommands": {
          "type": "boolean",
          "default": true,
          "description": "Track command executions"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
