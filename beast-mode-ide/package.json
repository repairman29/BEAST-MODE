{
  "name": "beast-mode-ide",
  "version": "0.1.0",
  "description": "BEAST MODE IDE - Enterprise Quality Intelligence Platform",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --mode development --watch & electron . --dev",
    "dev:simple": "electron . --dev",
    "build": "webpack --mode production && electron-builder",
    "build:webpack": "webpack --mode production",
    "build:mac": "npm run build:webpack && electron-builder --mac",
    "build:win": "npm run build:webpack && electron-builder --win",
    "build:linux": "npm run build:webpack && electron-builder --linux",
    "test": "node scripts/test-ide.js",
    "test:features": "node scripts/test-all-features.js",
    "test:automated": "node scripts/automated-test-suite.js",
    "test:frontend": "playwright test",
    "test:ui": "playwright test --grep '@ui'",
    "test:ux": "playwright test --grep '@ux'",
    "test:visual": "playwright test --grep '@visual'",
    "test:accessibility": "playwright test --grep '@a11y'",
    "test:electron": "playwright test --config=tests/electron/playwright.config.js",
    "test:electron:main": "playwright test tests/electron/main-process.spec.js --config=tests/electron/playwright.config.js",
    "test:electron:ipc": "playwright test tests/electron/ipc.spec.js --config=tests/electron/playwright.config.js",
    "test:electron:e2e": "playwright test tests/electron/e2e.spec.js --config=tests/electron/playwright.config.js",
    "test:all": "npm run test:features && npm run test:automated && npm run test:frontend",
    "beast-mode:analyze": "node scripts/beast-mode-dogfood.js",
    "beast-mode:improve": "node scripts/beast-mode-improve.js",
    "beast-mode:apis": "node scripts/use-beast-mode-apis.js",
    "build:jony-ive": "node scripts/build-jony-ive-ide.js",
    "build:from-stories": "node scripts/build-from-user-stories.js",
    "quality:check": "node scripts/beast-mode-dogfood.js"
  },
  "keywords": [
    "ide",
    "editor",
    "quality",
    "security",
    "ai"
  ],
  "author": "BEAST MODE",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.0",
    "css-loader": "^6.11.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "playwright": "^1.57.0",
    "style-loader": "^3.3.4",
    "typescript": "^5.3.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@xterm/addon-fit": "^0.9.0",
    "@xterm/xterm": "^5.3.0",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.beastmode.ide",
    "productName": "BEAST MODE IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
