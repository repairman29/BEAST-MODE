    <link rel="stylesheet" href="../css/infographic-style.css">
    <style>
        .tech-stack {
            background: linear-gradient(135deg, #1e293b, #0f172a);
            min-height: 100vh;
            padding: 4rem;
            display: flex;
            flex-direction: column;
            gap: 2rem;
            align-items: center;
            justify-content: center;
        }

        .stack-layer {
            width: 100%;
            max-width: 1400px;
            padding: 3rem;
            border-radius: 16px;
            text-align: center;
            color: white;
            font-weight: 600;
            position: relative;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        .layer-creators {
            background: linear-gradient(90deg, #3B82F6, #60A5FA);
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
        }

        .layer-governance {
            background: linear-gradient(90deg, #1E3A8A, #9333EA);
            padding: 4rem;
            box-shadow: 0 0 60px rgba(147, 51, 234, 0.6);
            border: 4px solid #F59E0B;
            animation: glow-pulse 3s ease-in-out infinite;
            position: relative;
        }

        .layer-governance::before {
            content: '';
            position: absolute;
            inset: -4px;
            background: linear-gradient(45deg, #9333EA, #1E3A8A, #9333EA);
            border-radius: 16px;
            z-index: -1;
            opacity: 0.5;
            animation: glow-pulse 3s ease-in-out infinite;
        }

        .layer-storage {
            background: linear-gradient(90deg, #475569, #64748B);
            box-shadow: 0 10px 30px rgba(71, 85, 105, 0.4);
        }

        .layer-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .layer-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        .tool-logos {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .tool-logo {
            background: rgba(255, 255, 255, 0.1);
            padding: 1.5rem 2rem;
            border-radius: 12px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            font-weight: 600;
        }

        .governance-features {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .governance-feature {
            background: rgba(255, 255, 255, 0.1);
            padding: 1.5rem;
            border-radius: 12px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        .governance-feature .icon {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .key-insight {
            margin-top: 3rem;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            text-align: center;
            max-width: 1000px;
            border: 2px solid rgba(245, 158, 11, 0.3);
        }

        @keyframes glow-pulse {
            0%, 100% { 
                box-shadow: 0 0 40px rgba(147, 51, 234, 0.5), 0 0 80px rgba(30, 58, 138, 0.3);
            }
            50% { 
                box-shadow: 0 0 60px rgba(147, 51, 234, 0.8), 0 0 120px rgba(30, 58, 138, 0.5);
            }
        }
    </style>
</head>
