{
  "name": "beast-mode-website",
  "version": "1.0.0",
  "description": "BEAST MODE - Enterprise Quality Intelligence Platform Website",
  "private": true,
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "work": "node scripts/work.js",
    "services:start": "cd .. && npm run services:start",
    "work:all": "cd .. && npm run work",
    "test": "node scripts/test-features.js",
    "test:api": "node scripts/test-features.js",
    "test:ui": "node scripts/test-ui.js",
    "test:experience": "node scripts/test-experience.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:legacy": "node scripts/test-e2e-flows.js",
    "test:e2e:user-flow": "node scripts/test-user-flow-e2e.js",
    "test:final": "node scripts/test-final-mvp.js",
    "test:all": "npm run test:ui && npm run test:experience && npm run test:api && npm run test:e2e",
    "test:build": "npm run lint && npm run build",
    "deploy": "bash ../scripts/deploy-vercel.sh",
    "deploy:auto": "bash ../scripts/deploy-vercel.sh \"fix: Automated deployment\"",
    "deploy:manual": "cd .. && git add -A && git commit -m \"fix: Automated deployment\" && git push origin main && cd website && vercel --prod --yes",
    "logs": "vercel logs",
    "logs:list": "vercel list --limit 10"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@octokit/app": "^16.1.2",
    "@octokit/rest": "^22.0.1",
    "@octokit/webhooks": "^14.2.0",
    "@supabase/auth-helpers-nextjs": "^0.15.0",
    "@supabase/supabase-js": "^2.89.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "next": "14.2.35",
    "openai": "^6.15.0",
    "puppeteer": "^24.34.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "stripe": "^20.1.0",
    "tailwind-merge": "^3.4.0",
    "typescript": "^5.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "critters": "^0.0.23",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
