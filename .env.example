# ============================================
# BEAST MODE Core Library - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git

# ============================================
# AI Service Endpoints (Optional)
# ============================================
# URLs for AI services if running locally
ORACLE_API_URL=http://localhost:3006
CODE_ROACH_API_URL=http://localhost:3007
DAISY_CHAIN_API_URL=http://localhost:3008

# ============================================
# Deployment Platform API Keys (Optional)
# ============================================
# Required for deployment orchestration features
VERCEL_API_KEY=your_vercel_api_key
RAILWAY_API_KEY=your_railway_api_key
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# ============================================
# Database (Optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ============================================
# Vercel Deployment (Optional)
# ============================================
# For deployment automation
VERCEL_TOKEN=your_vercel_token

# ============================================
# DNS Management (Optional)
# ============================================
# For automated DNS updates
PORKBUN_API_KEY=your_porkbun_api_key
PORKBUN_SECRET_KEY=your_porkbun_secret_key
